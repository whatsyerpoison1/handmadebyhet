<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%= image_tag(@macrame.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @macrame.name %></h1>
      <p>Some awesome description of our amazing macrame.</p>
      <p>Amount: <%= humanized_money_with_symbol(@macrame.price) %></p>
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'macrame_id', @macrame.id %>
        <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
